<?xml version="1.0"?>
<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd"
>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument
                name="commands"
                xsi:type="array"
            >
                <item
                    name="mageforge_hello"
                    xsi:type="object"
                >OpenForgeProject\MageForge\Console\Command\HelloMageForgeCommand</item>
                <item
                    name="mageforge_version"
                    xsi:type="object"
                >OpenForgeProject\MageForge\Console\Command\VersionCommand</item>
                <item
                    name="mageforge_system_check"
                    xsi:type="object"
                >OpenForgeProject\MageForge\Console\Command\SystemCheckCommand</item>
                <item
                    name="mageforge_themes_list"
                    xsi:type="object"
                >OpenForgeProject\MageForge\Console\Command\ListThemesCommand</item>
                <item
                    name="mageforge_themes_build"
                    xsi:type="object"
                >OpenForgeProject\MageForge\Console\Command\BuildThemesCommand</item>
            </argument>
        </arguments>
    </type>

    <!-- Configure services -->
    <type name="OpenForgeProject\MageForge\Service\DependencyChecker">
        <arguments>
            <argument name="fileDriver" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
            <argument name="shell" xsi:type="object">Magento\Framework\Shell</argument>
        </arguments>
    </type>

    <type name="OpenForgeProject\MageForge\Service\GruntTaskRunner">
        <arguments>
            <argument name="shell" xsi:type="object">Magento\Framework\Shell</argument>
        </arguments>
    </type>

    <type name="OpenForgeProject\MageForge\Service\StaticContentDeployer">
        <arguments>
            <argument name="shell" xsi:type="object">Magento\Framework\Shell</argument>
        </arguments>
    </type>

    <type name="OpenForgeProject\MageForge\Service\HyvaThemeBuilder">
        <arguments>
            <argument name="shell" xsi:type="object">Magento\Framework\Shell</argument>
            <argument name="fileDriver" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <!-- Configure BuildThemesCommand -->
    <type name="OpenForgeProject\MageForge\Console\Command\BuildThemesCommand">
        <arguments>
            <argument name="themePath" xsi:type="object">OpenForgeProject\MageForge\Model\ThemePath</argument>
            <argument name="themeList" xsi:type="object">OpenForgeProject\MageForge\Model\ThemeList</argument>
            <argument name="fileDriver" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
            <argument name="hyvaThemeDetector" xsi:type="object">OpenForgeProject\MageForge\Service\HyvaThemeDetector</argument>
            <argument name="dependencyChecker" xsi:type="object">OpenForgeProject\MageForge\Service\DependencyChecker</argument>
            <argument name="gruntTaskRunner" xsi:type="object">OpenForgeProject\MageForge\Service\GruntTaskRunner</argument>
            <argument name="staticContentDeployer" xsi:type="object">OpenForgeProject\MageForge\Service\StaticContentDeployer</argument>
            <argument name="hyvaThemeBuilder" xsi:type="object">OpenForgeProject\MageForge\Service\HyvaThemeBuilder</argument>
        </arguments>
    </type>
</config>
